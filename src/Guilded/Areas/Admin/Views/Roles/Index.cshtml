@model PaginatedRolesViewModel
@{
    ViewData["Title"] = "Roles";
    string pagerUrl = Url.Action("Index", "Roles", new {area = "Admin"});
}

<h3>
    Roles
</h3>

<a class="ui small green icon button" asp-area="Admin" asp-controller="Roles" asp-action="EditOrCreate">
    <i class="icon fa-plus-circle"></i> Create a new role
</a>
<br />
<br />

<guilded-pager pager-page="@Model.CurrentPage" pager-last-page="@Model.LastPage" pager-url="@pagerUrl"
               pager-vertical-location="Top" />
<div class="ui extra large styled fluid accordion">
    @foreach (var role in Model.Roles)
    {
        <div class="title">
            <i class="dropdown icon"></i>
            @role.Name
        </div>
        <div class="content">
            <p class="transition hidden">
                <div class="ui relaxed list">
                    @foreach (var permission in role.Permissions)
                    {
                        <div class="item">
                            <div class="header">
                                @permission.PermissionType
                            </div>
                            <div class="description">
                                @permission.Description
                            </div>
                        </div>
                    }
                </div>
            </p>
        </div>
    }
</div>
<guilded-pager pager-page="@Model.CurrentPage" pager-last-page="@Model.LastPage" pager-url="@pagerUrl"
               pager-vertical-location="Bottom" />