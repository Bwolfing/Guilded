@model ThreadOverviewViewModel

<a class="event" asp-area="Forums" asp-controller="Threads" asp-action="ThreadBySlug"
   asp-route-slug="@Model.Slug">
    <div class="content">
        <div class="summary">
            @Model.Title
            @if (Model.IsLocked)
            {
                <i class="lock icon" title="locked"></i>
            }
            <div class="date">
                posted by @Model.Author - @Model.CreatedAt.ToRelativeTimeStamp()
            </div>
        </div>
    </div>
</a>