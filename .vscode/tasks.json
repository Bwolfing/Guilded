{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "${workspaceRoot}/src/Selama-SPA"
            ],
            "isBuildCommand": true,
            "showOutput": "always",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "args": [
                "dotnet test ${workspaceRoot}/test/Selama.Tests"
            ],
            "isTestCommand": true,
            "showOutput": "always",
            "problemMatcher": "$msCompile",
            "suppressTaskName": true
        }
    ]
}